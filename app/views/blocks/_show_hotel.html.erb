
    <h1>
      <%= @hotel.title %>
    </h1>
    <hr />

    <div class="div_descr_1">
       <%= image_tag @hotel.image.thumb.url %>
    </div>

    <div class="div_descr_3">
        <h2><%= render 'vote_buttom' %></h2>
    </div>

    <div class="div_descr_6">
        <h2><i class="fa fa-star" aria-hidden="true"></i>
        &emsp;-&emsp;<%= @hotel.star_rating %> 
        </h2>
    </div>

    <div class="div_descr_4">
        <h2><i class="fa fa-usd" aria-hidden="true"></i>
        &emsp;-&emsp;<%= @hotel.price %><h2>
    </div>   

    <div class="div_descr_5">
        <h2><i class="fa fa-cutlery" aria-hidden="true"></i>
            &emsp;-&emsp;<%= @hotel.breakfast %></h2>
    </div>  

    <div class="div_descr_2">
        <br />
        <p><%= @hotel.room_desc %></p>
        <div>
            <br />
            <p><i>Address: &emsp; <%= @hotel.address %></i></p>
        </div>  
    </div>

    
   
    <div class="clear"></div>
